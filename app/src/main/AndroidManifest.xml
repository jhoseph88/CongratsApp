                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <!--
                  ATTENTION: This data URL was auto-generated. We recommend that you use the HTTP scheme.
                  TODO: Change the host or pathPrefix as necessary.
                -->
                <data
                    android:host="[ENTER-YOUR-HTTP-HOST-HERE]"
                    android:pathPrefix="/onboarding"
                    android:scheme="http"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AcademicsTab"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CheckListActivity"
            android:parentActivityName=".Onboarding"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".DisplayWebpage"
            android:label="@string/title_activity_display_webpage"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".LifeAndActivitiesTab"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".OpportunitiesTab"
            android:screenOrientation="portrait"/>
        <activity android:name=".InfoActivity"
                  android:screenOrientation="portrait">
        </activity>
    </application>

